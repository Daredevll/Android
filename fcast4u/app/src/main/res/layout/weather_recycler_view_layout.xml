<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@drawable/button_shape"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:padding="5dp"
    android:id="@+id/root">

    <LinearLayout
        android:id="@+id/temp_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="2dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/iconView">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-22\n  16:00:00"
            android:id="@+id/time_date"
            android:textSize="10sp"
            android:textColor="#ffdadad1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23C"
            android:id="@+id/temperature"
            android:textSize="35sp"
            android:textColor="#ffdadad1"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.52m/s, NE"
            android:textColor="#ffdadad1"
            android:id="@+id/wind"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63% humidity"
            android:textColor="#ffdadad1"
            android:id="@+id/humidity"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now"
        android:textColor="#ffdadad1"
        android:id="@+id/time"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textColor="#ffdadad1"
        android:id="@+id/clouds"
        android:layout_alignBottom="@+id/temp_container"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <ImageView
        android:contentDescription="weather icon"
        android:id="@+id/iconView"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/add_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ALARM"
        android:textSize="12sp"
        android:background="@drawable/button_shape"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>